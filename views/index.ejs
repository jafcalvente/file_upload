<!DOCTYPE html>
<html>
  <head>
    <title>File Upload</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>
    <header>File Upload</header>

    <nav>
      <button><a href='/fileUpload'>Inicio</a></button>
    </nav>

    <table>
      <tr>
        <th>Nombre</th>
        <th>Path</th>
      </tr>
      <% for (var i=0; i<files.length; i++) { %>
        <tr>
          <td><a href='/fileUpload/<%= files[i].id %>'><%= files[i].name %><a></td>
          <td><%= files[i].path %></td>
          <td><button><a href='/fileUpload/delete/<%= files[i].id %>'>Borrar</a></button></td>
        </tr>
      <% } %>
    </table>

    <form method='post' action='/fileUpload' enctype='multipart/form-data'>
      <p>
        <label for='file'>Fichero: </label>
        <input type='file' name='file' id='file'/>
        <input type='submit' value='Upload'/>
      </p>
    </form>
  </body>

  <footer>
    <button><a href='https://github.com/jafcalvente/file_upload'>GitHub</a></button>
  </footer>
</html>
